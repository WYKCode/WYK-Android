<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/timetable_card"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    cardview:cardBackgroundColor="@color/accent"
    cardview:cardCornerRadius="2dp"
    cardview:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/timetable_entry_subject"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.7"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="Ethics and Religion Education"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/md_white_1000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/timetable_entry_period"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="20dp"
            android:layout_weight="0.3"
            android:alpha=".7"
            android:ellipsize="marquee"
            android:gravity="center|right"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="8:20-9:00"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/md_white_1000"
            android:textSize="14sp" />

    </LinearLayout>

</android.support.v7.widget.CardView>
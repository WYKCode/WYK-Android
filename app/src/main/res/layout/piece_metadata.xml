<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/metadata_textual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="22dp">

        <TextView
            android:id="@+id/metadata_title"
            fontPath="WaterlooBoldStd.otf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="4sp"
            android:text="Windows 10 finishes first year on 1-in-4 Windows PCs"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/md_light_primary_text"
            android:textSize="30sp"
            android:textIsSelectable="true"
            android:focusable="true"
            android:longClickable="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/metadata_title">

            <TextView
                android:id="@+id/metadata_author"
                fontPath="BrightonStd-Bold.otf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By JENNIFER STEINHAUER"
                android:textColor="@color/md_black_1000"
                android:textStyle="bold"
                android:alpha="0.87"
                android:textSize="14sp"
                android:textIsSelectable="true"
                android:focusable="true"
                android:longClickable="true" />

            <TextView
                android:id="@+id/metadata_date"
                fontPath="BrightonStd-Medium.otf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="3 hours ago"
                android:textColor="@color/md_black_1000"
                android:alpha="0.87"
                android:textSize="14sp"
                android:textIsSelectable="true"
                android:focusable="true"
                android:longClickable="true" />

        </LinearLayout>

    </RelativeLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/metadata_header"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_below="@id/metadata_textual" />

</RelativeLayout>
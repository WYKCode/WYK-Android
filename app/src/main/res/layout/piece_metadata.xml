<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/metadata_header"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <RelativeLayout
        android:id="@+id/metadata_textual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/metadata_header"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="34dp">

        <TextView
            android:id="@+id/metadata_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha=".87"
            android:focusable="true"
            android:fontFamily="sans-serif-condensed"
            android:lineSpacingExtra="0sp"
            android:longClickable="true"
            android:text="Windows 10 finishes first year on 1-in-4 Windows PCs"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/md_light_primary_text"
            android:textIsSelectable="true"
            android:textSize="42sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/metadata_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/metadata_title"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/metadata_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:longClickable="true"
                android:text="By JENNIFER STEINHAUER"
                android:textColor="@color/md_grey_400"
                android:textIsSelectable="true"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/metadata_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:alpha="0.87"
                android:focusable="true"
                android:longClickable="true"
                android:text="3 hours ago"
                android:textColor="@color/md_grey_400"
                android:textIsSelectable="true"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/metadata_sub"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="6dp"
            android:background="?android:attr/listDivider" />

    </RelativeLayout>


</RelativeLayout>